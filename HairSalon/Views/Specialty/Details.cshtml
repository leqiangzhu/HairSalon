@{
Layout = "_Layout"; 
}
@using HairSalon.Models;

<div class='container'>
    <h2>The info of SP:@Model.GetSpecialtyName()</h2>
     <br/>
     Client NUM:<span style="color:rgb(35, 201, 201)">xxxx;</span>
      <br/>



<h2>All the Clients For Specialty: Model.GetClientName()</h2>

<table>
  <tr>
    <th>ID</th>
    <th>Client name</th>
    <th>Client phone</th>
     <th>specialty</th>
    <th>VIEW</th>
  </tr>

<ul>
  
