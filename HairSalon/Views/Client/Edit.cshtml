@{
  Layout = "_Layout";
}
@using HairSalon.Models;

<div class='container'>



<p><a href='/client'>Back to Client List</a></p>
<hr/>
<h5>Edit the Client Info</h5>
<form action="/client" method="post">
  <label for="newClient">name</label>
  <br/>
  <input id="newClient" name="clientName" type="text" value="@Model.GetClientName()">
  <br/>
  <label for="newClient">gender</label>
  <br/>
  <select class="form-control" id="selectstylist" name="stylistId" style="width: 240px">
   <option value="man">mele</option>
   <option value="women">femle</option>
   </select>
  <br/>
  <label for="newClient">phone number</label>
  <br/>
  <input id="newClient" name="clientPhone" type="text" value="John">>
  <br/>
  <label for="newClient">email</label>
  <br/>
  <input id="newClient" name="clientEmail" type="text">
  <br/>
  <label for="newClient">adrees</label>
  <br/>
  <input id="newClient" name="clientAdress" type="text">
  <br/>
  <label for="newClient">card info</label>
  <br/>
  <input id="newClient" name="clientCard" type="text">
  <br/>
  <label for="newClient">card Note</label>
  <br/>
  <input id="newClient" name="clientNote" type="text" style="height:80px">
 
   <br/> <br/>
  <select class="form-control" id="selectstylist" name="stylistId" style="width: 240px">
   <p>select a stylist </p>>
   @foreach(Stylist stylist in Stylist.GetAll())
    {
      
      <option value="@stylist.GetStylistId()">@stylist.GetStylistName()</option>
    }

  </select>
  <br/>
  <button type="submit" class='btn btn-success' >Comfirm</button>
</form>
</div>